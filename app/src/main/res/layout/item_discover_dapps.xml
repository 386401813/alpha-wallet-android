<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/standard_16"
    android:paddingRight="@dimen/standard_16">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/token_icon"
        android:layout_height="@dimen/token_icon"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/small_12"
        android:layout_marginRight="@dimen/small_12"
        android:layout_toStartOf="@id/controls"
        android:layout_toEndOf="@+id/icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/font_semibold"
            android:lines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/sp15"
            tools:text="DApp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/font_regular"
            android:lines="1"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/sp12"
            tools:text="Description goes here" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_regular"
            android:padding="@dimen/standard_16"
            android:text="@string/add"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_regular"
            android:padding="@dimen/standard_16"
            android:text="@string/action_remove"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/sp12"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</RelativeLayout>