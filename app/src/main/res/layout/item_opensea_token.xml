<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holding_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp16"
    android:paddingTop="@dimen/dp16"
    android:paddingEnd="@dimen/dp8"
    android:paddingBottom="@dimen/dp16">

    <CheckBox
        android:id="@+id/radioBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp8"
        android:button="@drawable/selector_round_checkbox"
        android:clickable="false"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/icon_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_toEndOf="@id/radioBox">

        <com.alphawallet.app.widget.NFTImageView
            android:id="@+id/asset_detail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            custom:webview_height="64" />

        <TextView
            android:id="@+id/text_count"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/value_amount_overlay"
            android:backgroundTint="@color/azure"
            android:fontFamily="@font/font_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:text="25" />

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dp16"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/arrow_right"
        android:layout_toEndOf="@id/icon_wrapper"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:fontFamily="@font/font_regular"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20"
            tools:text="Title" />

        <TextView
            android:id="@+id/token_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/subtitle"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/font_semibold"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15"
            android:visibility="visible"
            tools:text="#1" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toStartOf="@id/count"
            android:layout_toEndOf="@id/token_id"
            android:ellipsize="end"
            android:fontFamily="@font/font_regular"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/dove"
            android:textSize="@dimen/sp15"
            tools:text="Infinite Fungible Token" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/subtitle"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/font_semibold"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15"
            android:visibility="gone"
            tools:text="x200" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon_wrapper"
        android:background="@drawable/background_card_shadow"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/background_status_pending"
                    android:fontFamily="@font/font_bold"
                    android:paddingLeft="13dp"
                    android:paddingTop="4dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="4dp"
                    android:text="@string/status_pending"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/layout_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/generation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/ic_generation"
                        android:drawablePadding="7dp"
                        android:fontFamily="@font/font_semibold"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cooldown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_cooldown"
                        android:drawablePadding="7dp"
                        android:fontFamily="@font/font_semibold"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/click_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/layout_token"
        android:layout_alignTop="@id/layout_token"
        android:layout_alignEnd="@id/layout_token"
        android:layout_alignBottom="@id/layout_token"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical" />
</RelativeLayout>
