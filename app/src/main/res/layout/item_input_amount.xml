<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header_amount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_alabaster">

        <View
            style="@style/Aw.Component.Separator"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/text_header"
            style="@style/Aw.Typography.StandardHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/amount" />


        <com.alphawallet.app.widget.ChainName
            android:id="@+id/chain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp10" />

    </RelativeLayout>

    <View style="@style/Aw.Component.Separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp16"
        android:paddingTop="@dimen/dp30"
        android:paddingEnd="@dimen/dp16"
        android:paddingBottom="@dimen/dp20">

        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_more_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.alphawallet.app.widget.TokenIcon
                    android:id="@+id/token_icon"
                    android:layout_width="@dimen/token_icon"
                    android:layout_height="@dimen/token_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp8"
                    android:foregroundGravity="center_vertical" />

                <TextView
                    android:id="@+id/text_token_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/font_regular"
                    android:textAllCaps="true"
                    android:textColor="?colorOnSurface"
                    android:textSize="@dimen/sp36"
                    tools:text="ETH" />

                <ImageView
                    android:id="@+id/expand_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp8"
                    android:src="@drawable/ic_expand_more" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/gas_fetch_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:indeterminateTint="@color/azure"
                android:paddingTop="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:visibility="gone" />

            <com.alphawallet.app.ui.widget.entity.NumericInput
                android:id="@+id/amount_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:completionThreshold="1"
                android:fontFamily="@font/font_semibold"
                android:gravity="end"
                android:hint="0"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="@dimen/dp5"
                android:paddingEnd="@dimen/dp5"
                android:textColor="@color/color_dove"
                android:textColorHint="@color/color_dusty"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="@string/available"
                android:textColor="@color/dove"
                android:textSize="@dimen/sp13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/color_dove"
                android:textSize="@dimen/sp13" />

            <TextView
                android:id="@+id/text_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="@color/color_dove"
                android:textSize="@dimen/sp13"
                tools:text="4.4328" />

            <TextView
                android:id="@+id/text_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="@color/color_dove"
                android:textSize="@dimen/sp13"
                tools:text="ETH" />

            <TextView
                android:id="@+id/text_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semibold"
                android:gravity="end"
                android:text="@string/error_insufficient_funds"
                android:textColor="@color/danger"
                android:textSize="@dimen/sp17"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_all_funds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semibold"
                android:gravity="end"
                android:lines="1"
                android:text="@string/all_funds"
                android:textColor="@color/color_azure"
                android:textSize="@dimen/sp17"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>