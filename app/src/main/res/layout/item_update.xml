<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_update"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_16"
    android:animateLayoutChanges="true"
    android:background="@color/text_primary"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="@dimen/standard_16">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_12"
        android:fontFamily="@font/font_regular"
        android:text="@string/new_version_title"
        android:textColor="@color/text_primary_inverse"
        android:textSize="@dimen/sp20" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_detail_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/text_primary_inverse"
            android:textSize="@dimen/sp15"
            tools:text="Installed: 123" />

        <TextView
            android:id="@+id/text_detail_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_12"
            android:fontFamily="@font/font_regular"
            android:textColor="@color/text_primary_inverse"
            android:textSize="@dimen/sp15"
            tools:text="Available: 130" />

    </LinearLayout>

</LinearLayout>