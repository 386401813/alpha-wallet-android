<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_16"
    android:layout_marginBottom="@dimen/standard_16"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_error"
        android:orientation="vertical"
        android:padding="@dimen/standard_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/font_bold"
            android:text="@string/label_important"
            android:textAllCaps="true"
            android:textColor="@color/text_error_inverse"
            android:textSize="@dimen/sp17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/font_regular"
            android:gravity="center"
            android:text="@string/universal_link_notice"
            android:textColor="@color/text_error_inverse"
            android:textSize="@dimen/sp17" />

    </LinearLayout>
</LinearLayout>
