<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp16"
    android:paddingEnd="@dimen/dp16"
    android:paddingBottom="@dimen/dp16"
    android:visibility="visible">

    <ProgressBar
        android:id="@+id/wait_buttons"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEBUG"
            android:textColor="@color/danger"
            android:textSize="@dimen/dp10"
            android:visibility="gone"
            tools:ignore="HardcodedText,SmallSp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/primary_button_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.5"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/primary_button"
                style="@style/Aw.Component.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:text="Primary" />

            <ProgressBar
                android:id="@+id/primary_spinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:indeterminateTint="@color/white"
                android:translationZ="20dp"
                android:visibility="gone" />

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/secondary_button"
            style="@style/Aw.Component.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="0.5"
            android:visibility="gone"
            tools:text="Secondary"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            style="@style/Aw.Component.Button.Icon"
            android:id="@+id/more_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/dp8"
            android:layout_weight="0.2"
            android:gravity="center"
            app:icon="@drawable/ic_menu"
            android:visibility="gone"
            tools:visibility="visible" />

        <!--        <androidx.appcompat.widget.AppCompatImageButton-->
        <!--            android:id="@+id/more_button"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="48dp"-->
        <!--            android:layout_marginStart="@dimen/dp8"-->
        <!--            android:layout_weight="0.2"-->
        <!--            android:background="@drawable/selector_button_secondary"-->
        <!--            android:drawableTint="@color/azure"-->
        <!--            android:gravity="center"-->
        <!--            android:src="@drawable/ic_menu_azure"-->
        <!--            android:visibility="gone"-->
        <!--            app:tint="@drawable/selector_button_secondary_text"-->
        <!--            tools:visibility="visible" />-->
    </LinearLayout>
</LinearLayout>