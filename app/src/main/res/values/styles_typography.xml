<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Aw.Typography.ToolbarTitle" parent="">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/standard_16</item>
        <item name="android:paddingEnd">@dimen/standard_16</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Aw.Typography.TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Aw.Typography.ChartTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Aw.Typography.StandardHeaderText" parent="">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_dove</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>

    <style name="Aw.Typography.ActionItemText" parent="">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:layout_height">@dimen/action_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/cozy_20</item>
        <item name="android:paddingEnd">@dimen/cozy_20</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/sp17</item>
    </style>

    <style name="Aw.Typography.TransactionDetailTitleText" parent="">
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Aw.Typography.TransactionDetailLabelText" parent="">
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
