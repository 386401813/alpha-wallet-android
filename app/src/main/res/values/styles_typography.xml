<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Aw.Typography" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="Aw.Typography.Label">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Aw.Typography.Sub">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Aw.Typography.Body">
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Aw.Typography.Body.Error">
        <item name="android:textColor">@color/text_error</item>
    </style>

    <style name="Aw.Typography.ToolbarTitle" parent="">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/standard_16</item>
        <item name="android:paddingEnd">@dimen/standard_16</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Aw.Typography.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Aw.Typography.Tab.Chart" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:padding">@dimen/small_12</item>
    </style>

    <style name="Aw.Typography.StandardHeader" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>
</resources>
