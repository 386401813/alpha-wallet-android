<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="colorAccent">@color/color_azure</item>

        <item name="colorSurface">@color/color_white</item>
        <item name="colorOnSurface">@color/color_black</item>

        <!-- Controls (Switch, CheckBox, etc) -->
        <!-- Default state color -->
        <item name="colorControlNormal">@color/color_black</item>
        <!-- Activated state color -->
        <item name="colorControlActivated">@color/color_azure</item>
        <!-- Ripple color when control is tapped -->
        <item name="colorControlHighlight">@color/color_azure</item>

        <item name="colorError">@color/danger</item>
        <item name="colorOnError">@color/color_white</item>

        <item name="android:colorBackground">@color/color_white</item>
        <item name="colorOnBackground">@color/color_black</item>


        <item name="toolbarStyle">@style/Aw.Component.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Aw.Component.AppBarLayout</item>
        <item name="recyclerViewStyle">@style/Aw.Component.RecyclerView</item>
        <item name="switchStyle">@style/Aw.Component.Switch</item>
        <item name="checkboxStyle">@style/Aw.Component.CheckBox</item>
        <item name="radioButtonStyle">@style/Aw.Component.RadioButton</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/dove</item>
    </style>



    <!-- Splash Screen theme. -->

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
<!--        <item name="color_dove">@color/transparent</item>-->
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/dove</item>
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="AppTheme.Toolbar.WhiteTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/mine</item>
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="AppTheme.WhiteToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/mine</item>
    </style>

    <style name="ChartTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_mine</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/dp23</item>
        <item name="tabPaddingEnd">@dimen/dp23</item>
        <item name="tabTextAppearance">@style/ChartTabTextAppearance</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="ChartTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_dove</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TransactionDetailsCopyTextStyle">
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingEnd">@dimen/dp16</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
    </style>

    <style name="TransactionDetailsSubTitleStyle">
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dove</item>
    </style>

    <style name="TransactionDetailsStyle">
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/mine</item>
    </style>

    <style name="QRScannerTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">@dimen/big_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">@dimen/big_padding</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
    </style>

    <style name="FullscreenBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    
</resources>
